<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tvLetter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/color_1d_26_37"
        android:paddingLeft="23dp"
        android:paddingTop="10dp"
        android:paddingBottom="4dp"
        android:singleLine="true"
        android:textColor="@color/color_66_66_66"
        android:textSize="15sp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_below="@id/tvLetter"
        android:orientation="horizontal"
        android:paddingLeft="19dp"
        android:paddingRight="40dp"
        android:textColor="@color/color_25_2e_3f">

        <com.alsc.chat.view.RoundRectImageView
            android:id="@+id/ivAvatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            app:round_radius="20" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:paddingLeft="15dp"
            android:singleLine="true"
            android:textColor="@color/color_af_b9_d1"
            android:textSize="15sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/checkFriend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/bg_chat_check_selector"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/ll"
        android:textColor="@color/color_1d_26_37" />


</RelativeLayout>